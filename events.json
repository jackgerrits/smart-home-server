{
  "COMMENT": "Due to event timeout to prevent too many events occuring, a change and greater/less than event wont fire together. Higher up events will fire first",
  "events": [
    {
      "type": "change",
      "name": "door",
      "description": "Door opened/closed",
      "sensor": "magSwitch"
    },
    {
      "type": "change",
      "name": "sensorTouch",
      "description": "Sensor touched.",
      "sensor": "touch"
    },
    {
      "type": "equal",
      "name": "doorClosed",
      "description": "Door closed",
      "sensor": "magSwitch",
      "value": 1
    },
    {
      "type": "threshold",
      "name": "lightStatus",
      "name_lt": "lightOff",
      "name_gt": "lightOn",
      "description_lt": "The light has been turned off.",
      "description_gt": "The light has been turned on.",
      "sensor": "light",
      "value": 30
    },
    {
      "type": "and",
      "name": "alarm",
      "description": "Door closed and sensor touched",
      "event1": "doorClosed",
      "event2": "sensorTouch"
    }

  ]
}