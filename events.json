{
  "events": [
    {
      "type": "change",
      "name": "door",
      "description": "Door opened/closed",
      "sensor": "magSwitch",
      "timeout": 400
    },
    {
      "type": "change",
      "name": "sensorTouch",
      "description": "Sensor touched.",
      "sensor": "touch"
    },
    {
      "type": "equal",
      "name": "doorClosed",
      "description": "Door closed.",
      "sensor": "magSwitch",
      "value": 1
    },
    {
      "type": "equal",
      "name": "doorOpen",
      "description": "Door opened.",
      "sensor": "magSwitch",
      "value": 0
    },
    {
      "type": "threshold",
      "name": "lightStatus",
      "name_lt": "lightOff",
      "name_gt": "lightOn",
      "description_lt": "The light has been turned off.",
      "description_gt": "The light has been turned on.",
      "sensor": "light",
      "value": 30
    },
    {
      "type": "and",
      "name": "alarm",
      "description": "Door is open and lights changed.",
      "event1": "doorOpen",
      "event2": "lightStatus",
      "hide-from-feed": true
    },
    {
      "type": "and",
      "name": "test",
      "description": "Door is open and lights have been turned on.",
      "event1": "alarm",
      "event2": "lightStatus",
      "event2-subname": "lightOn"
    },
    {
      "type": "entityDetection",
      "name": "entityDetection",
      "name-enter": "enter",
      "name-leave": "leave",
      "name-occupied": "occupied",
      "name-absent": "absent",
      "description-leave": "Someone has left the room.",
      "description-enter": "Someone has entered the room.",
      "description-occupied": "The room is occupied.",
      "description-absent": "The room is empty.",
      "ir-sensor": "irdistance",
      "motion-sensor": "motion",
      "door-sensor": "magSwitch",
      "timeout": 2000
    },
    {
      "type": "and",
      "name": "lightperson",
      "description": "Lights on and person present",
      "event1": "enter",
      "event2": "lightStatus",
      "event2-subname": "lightOn"
    },
    {
      "type": "and",
      "name": "doorperson",
      "description": "door closed and person in room",
      "event1": "doorClosed",
      "event2": "occupied"
    },
    {
      "type": "and",
      "name": "tocuhdoorperson",
      "description": "sensor touched with person present and door clsoed",
      "event1": "sensorTouch",
      "event2": "doorperson"
    }

  ]
}