{
  "events": [
    {
      "type": "change",
      "name": "door",
      "description": "Door opened/closed",
      "sensor": "magSwitch",
      "timeout": 400
    },
    {
      "type": "change",
      "name": "sensorTouch",
      "description": "Sensor touched.",
      "sensor": "touch"
    },
    {
      "type": "equal",
      "name": "doorClosed",
      "description": "Door closed.",
      "sensor": "magSwitch",
      "value": 1
    },
    {
      "type": "equal",
      "name": "doorOpen",
      "description": "Door opened.",
      "sensor": "magSwitch",
      "value": 0
    },
    {
      "type": "threshold",
      "name": "lightStatus",
      "name_lt": "lightOff",
      "name_gt": "lightOn",
      "description_lt": "The light has been turned off.",
      "description_gt": "The light has been turned on.",
      "sensor": "light",
      "value": 30
    },
    {
      "type": "and",
      "name": "alarm",
      "description": "Door is open and lights changed.",
      "event1": "doorOpen",
      "event2": "lightStatus",
      "hide-from-feed": true
    },
    {
      "type": "and",
      "name": "test",
      "description": "Door is open and lights have been turned on.",
      "event1": "alarm",
      "event2": "lightStatus",
      "event2-subname": "lightOn"
    },
    {
      "type": "entityDetection",
      "name": "entityDetection",
      "name_enter": "enter",
      "name_leave": "leave",
      "name_occupied": "occupied",
      "name_absent": "absent",
      "description_leave": "Someone has left the room.",
      "description_enter": "Someone has entered the room.",
      "description_occupied": "The room is occupied.",
      "description_absent": "The room is empty.",
      "ir-sensor": "irdistance",
      "motion-sensor": "motion",
      "timeout": 2000
    }
  ]
}